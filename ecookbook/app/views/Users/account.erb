<h1>Welcome <%= @user.username %>!</h1>
<br>
<br>
<h3>All Recipes</h3>

<%@recipeType.each do |t|%>
    <%@user.recipes.each do |recipe|%>
        <%if recipe.recipeType==t%>
        <h2><%=t.name%></h2>
            <%@user.recipes.each do |r|%>
    
                <%if r.recipeType_id == t.id%> 
                <a href="/recipes/<%=r.id%>">
                <%=r.name%> </a> by <%=r.user.username%>
    <br>
                <%end%>
            <% end %>
    <br>
    <br>
        <%end%>
    <% end %>
<%end%>



<br>
<br>
<form method='get' action='/recipes/new'>
<button type='submit' value=submit>Create Recipe</button>
</form>
<form method='get' action='/logout'>
<button type='submit' value='submit'>Logout</button>
</form>