<%=flash[:message]%>
<h1>All Recipes</h1>
<%@recipeType.each do |t|%>
    <h2><%=t.name%></h2>
    <%@recipes.each do |recipe|%>
    
    <%if recipe.recipeType_id == t.id%> 
    <a href="/recipes/<%=recipe.id%>">
    <%=recipe.name%> </a> by <%=recipe.user.username%>
    <br>
    <%end%>
    <% end %>
    <br>
    <br>
    <% end %>